#Cornell Box
camera 0 0 3 0 0 0 0 1 0 45
output cornell.png

maxdepth 100



maxverts 12
#cube
vertex -1 +1 +1
vertex +1 +1 +1
vertex -1 -1 +1
vertex +1 -1 +1

vertex -1 +1 -1
vertex +1 +1 -1
vertex -1 -1 -1
vertex +1 -1 -1


specular 0 0 0
shininess 1
emission 0 0 0
diffuse 0 0 0

attenuation 1 0.1 0.05

#area light
pushTransform
emission 4 4 4
scale .3 1 .2 
translate 0 -.14 .05
area 4 5 1 
area 4 1 0 
popTransform

emission 0 0 0
specular .1 .1 .1

diffuse 0 0 1
#sphere 0 0.8 -1.5 0.1


#red
pushTransform
diffuse 1 0 0
scale 1 10 10 
translate .1 0 0
tri 0 6 4
tri 0 2 6
popTransform

#green
pushTransform
diffuse 0 1 0
scale 1 10 10 
translate -.1 0 0
